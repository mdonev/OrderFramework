@model OpenOrderFramework.Models.Accessorie

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ketchup, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.ketchup, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ketchup, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.Items.ID)
           
            <div class="form-group">
                @Html.LabelFor(model => model.mayonnaise, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.mayonnaise, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.mayonnaise, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.fries, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.fries, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.fries, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
</body>
</html>
